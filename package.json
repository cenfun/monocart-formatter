{
    "name": "monocart-formatter",
    "version": "1.0.8",
    "description": "JS/CSS/HTML/JSON formatter with mapping for both browser (Web Worker) and Node.js (Worker Threads)",
    "private": true,
    "main": "",
    "scripts": {
        "dev": "sf d formatter",
        "test": "npm run build && node ./test/test.js",
        "build-worker": "sf b formatter-worker,formatter-node -p patch",
        "build-formatter": "sf b formatter -p patch",
        "build": "sf lint && npm run build-worker && npm run build-formatter",
        "patch": "npm run build && sf publish patch"
    },
    "workspaces": [
        "packages/*"
    ],
    "keywords": [
        "monocart-formatter"
    ],
    "license": "MIT",
    "devDependencies": {
        "console-grid": "^2.0.1",
        "eight-colors": "^1.0.3",
        "eslint": "^8.55.0",
        "eslint-config-plus": "^1.0.6",
        "eslint-plugin-html": "^7.1.0",
        "js-beautify": "^1.14.11",
        "lz-utils": "^2.0.1",
        "stylelint": "^15.11.0",
        "stylelint-config-plus": "^1.0.4"
    }
}