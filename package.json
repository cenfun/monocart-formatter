        "chrome-devtools-frontend": "^1.0.1070764",
        "eslint": "^8.40.0",
        "eslint-config-plus": "^1.0.6",
        "eslint-plugin-html": "^7.1.0",
        "js-beautify": "^1.14.7",
        "lz-utils": "^2.0.1",
        "stylelint": "^15.6.1",
        "stylelint-config-plus": "^1.0.3"
    }
}